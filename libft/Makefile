NAME = libft.a
RM = rm -rf
FLAGS = -Wall -Wextra -Werror
LDFLAGS = -I./include/
SRC = \
	ft_itoa_long.c  ft_putchar.c     ft_strdel.c      ft_strnstr.c\
	ft_atoi.c       ft_lstadd.c      ft_putchar_fd.c  ft_strdup.c\
	ft_strrchr.c	ft_atoi_long.c   ft_lstdel.c      ft_putendl.c\
	ft_strequ.c     ft_strrev.c		 ft_bzero.c       ft_lstdelone.c\
 	ft_putendl_fd.c ft_striter.c     ft_strsplit.c	  ft_intlen.c\
	ft_lstiter.c    ft_putnbr.c      ft_striteri.c    ft_strstr.c\
	ft_isalnum.c    ft_lstmap.c      ft_putnbr_fd.c   ft_strjoin.c\
	ft_strsub.c		ft_isalpha.c     ft_lstnew.c      ft_putstr.c\
	ft_strlcat.c    ft_strtrim.c	 ft_isascii.c     ft_memalloc.c\
	ft_putstr_fd.c  ft_strlen.c      ft_tolower.c	  ft_isdigit.c\
	ft_memccpy.c    ft_rand_a_b.c    ft_strmap.c      ft_toupper.c\
	ft_islower.c    ft_memchr.c      ft_realloc.c     ft_strmapi.c\
	ft_uitoa.c		ft_isprint.c     ft_memcmp.c      ft_strcat.c\
	ft_strncat.c    ft_uitoa_long.c	 ft_isspace.c     ft_memcpy.c\
	ft_strchr.c     ft_strncmp.c     get_next_line.c  ft_isupper.c\
	ft_memdel.c     ft_strclr.c      ft_strncpy.c	  ft_iswhite.c\
	ft_memmove.c    ft_strcmp.c      ft_strnequ.c	  ft_itoa.c\
	ft_memset.c     ft_strcpy.c      ft_strnew.c      wstrlen.c
OBJ = $(SRC:.c=.o)
	SRCDIR	= ./src/
	OBJDIR	= ./obj/
	INCDIR	= ./include/
	SRCS	= $(addprefix $(SRCDIR), $(SRC))
	OBJS	= $(addprefix $(OBJDIR), $(OBJ))
	INCS	= $(addprefix $(INCDIR), $(INC))

all: $(NAME)

$(NAME): $(OBJS) $(INCS)
	@gcc $(FLAGS) -o $@ $^
	@ar rc $(NAME) $(OBJ)
	@ranlib $(NAME)
	@echo "\n\t \033[32m[All Fine's]\033[0m\n"

$(OBJS): $(SRCS)
	@gcc $(FLAGS) -c $(SRCS) $(LDFLAGS)
	@mkdir -p $(OBJDIR)
	@mv $(OBJ) $(OBJDIR)

clean:
	@echo "\nRM *.o.. \t      \033[32mOK BITCH!\033[0m"
	@$(RM) $(OBJS)
	@$(RM) *.o

fclean: clean
	@echo "RM libft.a..    \033[32mOK BITCH!\033[0m"
	@$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re
